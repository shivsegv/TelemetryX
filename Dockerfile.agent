# syntax=docker/dockerfile:1

FROM golang:1.24 AS build
WORKDIR /src

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /out/agent cmd/agent/main.go

FROM alpine:3.20
RUN apk add --no-cache ca-certificates

WORKDIR /app
COPY --from=build /out/agent ./agent
COPY deploy/certs/dev/ca.pem ./certs/ca.pem

ENV TELEMETRY_SERVER_ADDR=server:50051 \
    TELEMETRY_SERVER_CA_CERT=/app/certs/ca.pem \
    TELEMETRY_SERVER_NAME=server \
    TELEMETRY_SCRAPE_INTERVAL=2s

ENTRYPOINT ["/app/agent"]
